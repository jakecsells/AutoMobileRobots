task main()
{
  bool flag = true;
  SetSensorTouch(IN_1);
  ClearScreen();

  while (true)
  {
    if (SENSOR_1 == 1)
    {
      if (flag)
      {
        ClearScreen();
        TextOut(0,LCD_LINE4,"BUMPED ON!");
        OnFwd(OUT_A, 50);
        Wait(500);
        flag = false;
      }

      else
      {
        ClearScreen();
        TextOut(0,LCD_LINE4,"BUMPED OFF!");
        Off(OUT_A);
        Wait(500);
        flag = true;
      }
    }
  }
}
